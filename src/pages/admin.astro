    const mobileNavButtons = document.querySelectorAll(".nav-btn-mobile");

    // Open mobile sidebar
    if (mobileMenuToggle) {
      mobileMenuToggle.addEventListener("click", () => {
        mobileSidebarOverlay?.classList.remove("hidden");
        setTimeout(() => {
          mobileSidebar?.classList.remove("-translate-x-full");
        }, 10);
      });
    }

    // Close mobile sidebar
    const closeMobileSidebar = () => {
      mobileSidebar?.classList.add("-translate-x-full");
      setTimeout(() => {
        mobileSidebarOverlay?.classList.add("hidden");
      }, 300);
    };

    // Close button
    mobileSidebarClose?.addEventListener("click", closeMobileSidebar);

    // Click overlay to close
    mobileSidebarOverlay?.addEventListener("click", (e) => {
      if (e.target === mobileSidebarOverlay) {
        closeMobileSidebar();
      }
    });

    // Mobile Navigation switching
    mobileNavButtons.forEach((btn) => {
      btn.addEventListener("click", () => {
        const tabName = btn.getAttribute("data-tab");

        // Update mobile button styles
        mobileNavButtons.forEach((b) => {
          b.classList.remove("bg-blue-50", "text-blue-600", "dark:bg-blue-900/20", "dark:text-blue-400", "font-semibold");
          b.classList.add("text-slate-600", "hover:bg-slate-50", "dark:text-slate-400", "dark:hover:bg-slate-700/50", "font-medium");
        });
        btn.classList.add("bg-blue-50", "text-blue-600", "dark:bg-blue-900/20", "dark:text-blue-400", "font-semibold");
        btn.classList.remove("text-slate-600", "hover:bg-slate-50", "dark:text-slate-400", "dark:hover:bg-slate-700/50", "font-medium");

        // Update desktop button styles to match
        navButtons.forEach((b) => {
          const desktopTabName = b.getAttribute("data-tab");
          if (desktopTabName === tabName) {
            b.classList.add("bg-blue-50", "text-blue-600", "dark:bg-blue-900/20", "dark:text-blue-400");
            b.classList.remove("text-slate-600", "hover:bg-slate-50", "dark:text-slate-400", "dark:hover:bg-slate-700/50");
          } else {
            b.classList.remove("bg-blue-50", "text-blue-600", "dark:bg-blue-900/20", "dark:text-blue-400");
            b.classList.add("text-slate-600", "hover:bg-slate-50", "dark:text-slate-400", "dark:hover:bg-slate-700/50");
          }
        });

        // Show/hide content
        tabContents.forEach((content) => {
          if (content.id === `content-${tabName}`) {
            content.classList.remove("hidden");
          } else {
            content.classList.add("hidden");
          }
        });

        // Close mobile sidebar after navigation
        closeMobileSidebar();
      });
    });
  </script>
</Layout>
